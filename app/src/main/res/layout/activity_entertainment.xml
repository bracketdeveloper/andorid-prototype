<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Entertainment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#ffaa01">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="100dp">

            <TextView
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Entertainment Section"
                android:textColor="#FFF"
                android:textSize="18dp"
                 />
            <TextView
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:text="Kindly select your age range"
                android:textSize="16dp"

                android:layout_marginBottom="20dp"/>
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:drawableTop="@drawable/ic_speaker"
                android:id="@+id/btn_audio_entertainment"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:foregroundGravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_1_4"
                android:background="@drawable/round_btn"
                android:textColor="#ffaa01"
                android:layout_marginRight="15px"
                android:textSize="25px"
                android:text="Ages 1 - 4"
                android:id="@+id/btn_entertainment_1_to_4_age"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15px"
                android:textSize="25px"
                android:drawableTop="@drawable/ic_5_7"
                android:textColor="#ffaa01"
                android:background="@drawable/round_btn"
                android:text="Ages 5 - 7"
                android:id="@+id/btn_entertainment_5_to_7_age"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn"
                android:textColor="#ffaa01"
                android:drawableTop="@drawable/ic_8_12"
                android:textSize="25px"
                android:text="Ages 8 - 10"
                android:id="@+id/btn_entertainment_8_age"/>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>