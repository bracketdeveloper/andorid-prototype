<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#ffaa01"
        >
        <TextView
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="Kindly select one option"
            android:textSize="16dp"
            />
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@null"
            android:drawableTop="@drawable/ic_speaker"
            android:id="@+id/btn_audio_home"
            />
        <Button
            android:layout_marginTop="50dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_education"
            android:textColor="#ffaa01"
            android:drawableTop="@drawable/ic_education"
            android:text="Education"
            android:background="@drawable/round_btn"/>
        <Button
            android:layout_marginTop="40dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_entertainment"
            android:textColor="#ffaa01"
            android:drawableTop="@drawable/ic_entertainment"
            android:text="Entertainment"
            android:background="@drawable/round_btn"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>