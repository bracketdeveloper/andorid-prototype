<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".entertainment_4_to_7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#ffaa01">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="100dp">

            <TextView
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="5 to 7 Years Section"
                android:textColor="#FFF"
                android:textSize="18dp"
                />
            <TextView
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Kindly select Activity"
                android:textSize="16dp"

                android:layout_marginBottom="20dp"/>
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:drawableTop="@drawable/ic_speaker"
                android:id="@+id/btn_entertainment_audio_1_4"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:foregroundGravity="center">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn"
                android:textColor="#ffaa01"
                android:text="Play Rain Poem"
                android:textSize="20dp"
                android:layout_margin="20dp"
                android:id="@+id/btn_poem_1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn"
                android:textColor="#ffaa01"
                android:text="Play Twinkle Star Poem"
                android:textSize="20dp"
                android:layout_margin="20dp"
                android:id="@+id/btn_poem_2"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn"
                android:textColor="#ffaa01"
                android:text="Play 5 Monkeys Poem"
                android:textSize="20dp"
                android:layout_margin="20dp"
                android:id="@+id/btn_poem_3"/>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>